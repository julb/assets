<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="CONSOLE_LOG_PATTERN" value="%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}, UTC}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} [%X{correlationId}] %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
	
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />
	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />
	
		
	<springProfile name="(default | LOCAL | TEST) &amp; !HTTP_DEBUG">
		<logger name="org.springframework" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="org.hibernate" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="org.flywaydb" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="io.julb" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="reactor.netty" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
	</springProfile>
	
	<springProfile name="(default | LOCAL | TEST) &amp; HTTP_DEBUG">
		<logger name="org.springframework" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="org.hibernate" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="org.flywaydb" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="io.julb" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="org.apache.http" level="DEBUG">
			<appender-ref ref="CONSOLE" />
		</logger>
		
		<logger name="reactor.netty" level="INFO">
			<appender-ref ref="CONSOLE" />
		</logger>
	</springProfile>
</configuration>
